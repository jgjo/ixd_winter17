<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../views/partials/head %>
    
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/profile.css">

</head>

<body>
    <header>
        <% include ../views/partials/header %>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-sm-6">

                <div class="card hovercard">
                    <div class="cardheader">

                    </div>
                    <div class="avatar">
                        <img id="userImage" alt="" src="https://cdn.famousoutfits.com/wp-content/uploads/2014/09/profile-chris-pratt.png">
                    </div>
                    <div class="info">
                        <div class="title">
                            <h1 id="userName">Joe Maxim</h1>
                        </div>
                        <div class="desc"><h4 id="userBio">I have a very very very very very very very very very very very very very very very very very very very very very very very very very very cool bio.  Very very very very very very very very very very very very very very very very very very very very very very very very cool indeed. </h4></div>
                    </div>
                    <div class="bottom">
                        <a class="btn btn-primary btn-twitter btn-sm" href="https://twitter.com/webmaniac">
                            <i class="fa fa-twitter"></i>
                        </a>
                        &nbsp &nbsp &nbsp
                        <a class="btn btn-danger btn-sm" rel="publisher"
                           href="#">
                            <i class="fa fa-google-plus"></i>
                        </a>
                        &nbsp &nbsp &nbsp
                        <a class="btn btn-primary btn-sm" rel="publisher"
                           href="#">
                            <i class="fa fa-facebook"></i>
                        </a>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <script>
        var urlParams = new URLSearchParams(window.location.search);
        var userid = urlParams.get('id');
        if(userid=="undefined"||userid==null)
        {
            //do nothing
        }
        else
        {
            var user;
            var users =<%-JSON.stringify(usersJSON)%>
            for(var i=0; i<users.users.length; i++) {
                      if(users.users[i].id == userid)
                      {
                          user = users.users[i];
                      }
            }

            document.getElementById("userName").innerHTML = user.username;
            document.getElementById("userImage").src = "images/otherUser.png";
            document.getElementById("userBio").innerHTML = "This is my very very very very very very very very very very very very very very very very very very very very very very very very very very interesting bio.";

        }        
    </script>

</body>

</html>
