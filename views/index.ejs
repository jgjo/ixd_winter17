<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../views/partials/head %>

    <!-- Google Maps 55px; 89px-->
    <link rel="stylesheet" href="stylesheets/custommap.css">

</head>

<body>
    <!-- Header for the home page -->
    <header>
      <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header" style="height:100%">

        <div class="android-header mdl-layout__header mdl-layout__header--waterfall">
        
          <div class="mdl-layout__header-row" style="background-color:#3f63a1; padding:0px 6px 0px 2px;">
            <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" id="hdrbtn">
                <i class="material-icons">menu</i>
            </button>
              <ul class="mdl-menu mdl-js-menu mdl-js-ripple-effect mdl-menu--bottom-left" for="hdrbtn">
                <li class="mdl-menu__item"><span class="mdl-navigation__link" style="color:#3f63a1" href="#" onclick='profileclick()'>My Profile</span></li>
                <li class="mdl-menu__item"><span class="mdl-navigation__link" style="color:#3f63a1" href="#" onclick='ongoingclick()'>Ongoing Activities</span></li>        
                <li class="mdl-menu__item"><span class="mdl-navigation__link" style="color:#3f63a1" href="#" onclick='memoryclick()'>Memories</span></li>
                <li class="mdl-menu__item"><span class="mdl-navigation__link" style="color:#3f63a1" href="#" onclick='aboutclick()'>About</span></li>
                <li class="mdl-menu__item"><span class="mdl-navigation__link" style="color:#3f63a1" href="#" onclick='logoutClick()'>Logout</span></li>
              </ul>
            <!-- Add spacer, to align navigation to the right in desktop -->
            <div class="android-header-spacer mdl-layout-spacer"></div>
            <span class="android-mobile-title mdl-layout-title">
                  <a href="/"><img class="android-logo-image" src="images/logo.png"></a>
            </span>
          </div>
        </div>
      </div>
      <br>
      <br>
      <br>
      <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    </header>
    
    <!-- Legend for the map -->
    <div class="col-xs-12 col-md-8" id="legend" style="text-align:center">
              <span>
                <img style="opacity: 0.8;" src="images/blueMarker.png"></img>&nbsp Available Activities &nbsp
                <img style="opacity: 0.8;" src="images/greenMarker.png"></img>&nbsp Ongoing Activities &nbsp
                <img style="opacity: 0.8;" src="images/orangeMarker.png"></img>&nbsp Own Activities &nbsp
              </span>
    </div>

    <!-- PAGE CONTENT -->
    <div id="wrapper">
       <!-- Google map -->
       <div id="google_map" style="height:100%">
            <div id="map"></div>
       </div>
        <!-- Add activity and filter buttons overlayed on map -->
        <div id="over_map" width="100%" height="650px">
            <div class="row">
                <div class="col-lg-12 text-center" style="margin: 5px 5px;">
                  <button onclick='addclick()' class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored" style="background-color:#3f63a1">
                    <i class="material-icons">add</i>
                  </button>
                </div>

                <div class="col-lg-12 text-center" style="margin: 10px 5px;">
                  <button id="show-dialog" class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored" style="background-color:#3f63a1">
                    <i class="fa fa-sliders" aria-hidden="true"></i>
                  </button>
                </div>
            </div>
        </div>
    </div>

    <!-- FILTER DIALOG -->
    <dialog class="mdl-dialog">
      <h3 style="color:#3f63a1;" class="mdl-dialog__title">Filters</h3>
      <div class="mdl-dialog__content">
        <form action="demo_form.asp">
          <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="switch-1">
            <input type="checkbox" id="switch-1" class="mdl-switch__input">
            <span class="mdl-switch__label">Child Safe</span>
          </label>
          <br><br>
          <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="switch-2">
            <input type="checkbox" id="switch-2" class="mdl-switch__input">
            <span class="mdl-switch__label">Alcohol</span>
          </label>
          <br><br>
          <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="switch-3">
            <input type="checkbox" id="switch-3" class="mdl-switch__input">
            <span class="mdl-switch__label">Food</span>
          </label>
          <br><br>
          <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="switch-4">
            <input type="checkbox" id="switch-4" class="mdl-switch__input">
            <span class="mdl-switch__label">Outdoors</span>
          </label>
        </form>
      </div>
      <div class="mdl-dialog__actions">
        <button style="color:#3f63a1; opacity:.8;" type="button" class="mdl-button close">Done</button>
      </div>
    </dialog>

    <!-- Javascript functions for the page -->
    <script src="javascripts/index.js"></script>

    <!-- GET GLOBAL VARIABLES -->
    <script>
      var activities = <%-JSON.stringify(activitiesJSON)%>
      var ownactivities = <%-JSON.stringify(ownactivitiesJSON)%>
      var activitylog =<%-JSON.stringify(activitylogJSON)%>
      initPage();
    </script>

    <!-- Bootstrap Core JavaScript -->
    <script src="javascripts/bootstrap.min.js"></script>

    <!-- Maps -->
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDdV_CqEBtoB4xae7DEXjtsHSCTZOZI9m0&callback=initMap">
    </script>

</body>

</html>

